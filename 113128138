#include <WiFi.h>
#include <HTTPClient.h>
#include "I2Cdev.h"
#include "MPU6050.h"

#if I2CDEV_IMPLEMENTATION == I2CDEV_ARDUINO_WIRE
  #include "Wire.h"
#endif

// ğŸ›œ WiFi èˆ‡ Discord Webhook è¨­å®š
const char* ssid = "XN";
const char* password = "00000000";
const char* webhook_url = "https://discordapp.com/api/webhooks/1376910788945645588/RYCDv1RgTmrCxnkHUE9FU8jmcJIvdcXZ9mEMqYgpmdNM3YiEIZUfvi3vy2IEzx1PriLj";

MPU6050 accelgyro;
int16_t ax, ay, az;
int16_t gx, gy, gz;

#define BUZZER_PIN 15

bool hasWarned = false;
bool isBeeping = false;
unsigned long previousBeepMillis = 0;
const int beepOnTime = 200;   // å—¶å¤šä¹…(ms)
const int beepOffTime = 300;  // é–“éš”å¤šä¹…(ms)

void sendDiscordAlert(const String& content) {
  if (WiFi.status() == WL_CONNECTED) {
    HTTPClient http;
    http.begin(webhook_url);
    http.addHeader("Content-Type", "application/json");

    String payload = "{\"content\":\"" + content + "\"}";
    int httpResponseCode = http.POST(payload);

    if (httpResponseCode > 0) {
      Serial.print("âœ… Discord å·²é€šçŸ¥ï¼Œå›æ‡‰ç¢¼ï¼š");
      Serial.println(httpResponseCode);
    } else {
      Serial.print("âŒ Discord é€šçŸ¥å¤±æ•—ï¼ŒéŒ¯èª¤ç¢¼ï¼š");
      Serial.println(httpResponseCode);
    }
    http.end();
  }
}

void setup() {
  Serial.begin(115200);

  // åˆå§‹åŒ– WiFi
  WiFi.begin(ssid, password);
  Serial.print("æ­£åœ¨é€£æ¥ WiFi");
  while (WiFi.status() != WL_CONNECTED) {
    delay(500);
    Serial.print(".");
  }
  Serial.println("\nâœ… WiFi å·²é€£ç·šï¼");

  // åˆå§‹åŒ– MPU6050
  Wire.begin();
  accelgyro.initialize();

  if (accelgyro.testConnection()) {
    Serial.println("âœ… MPU6050 é€£ç·šæˆåŠŸï¼");
  } else {
    Serial.println("âŒ MPU6050 é€£ç·šå¤±æ•—ï¼");
  }

  // åˆå§‹åŒ–èœ‚é³´å™¨
  pinMode(BUZZER_PIN, OUTPUT);
  digitalWrite(BUZZER_PIN, LOW);
}

void loop() {
  // è®€å–å…­è»¸è³‡æ–™
  accelgyro.getMotion6(&ax, &ay, &az, &gx, &gy, &gz);

  float angleX = atan2(ay, az) * 180.0 / PI;
  float angleY = atan2(ax, az) * 180.0 / PI;

  Serial.print("angleX: "); Serial.print(angleX);
  Serial.print("Â°, angleY: "); Serial.print(angleY);
  Serial.print("Â°, az: "); Serial.println(az);

  // åµæ¸¬è·Œå€’ï¼ˆå§¿æ…‹æˆ–åŠ é€Ÿåº¦ç•°å¸¸ï¼‰
  if (!hasWarned && ( (abs(angleX) > 45 || abs(angleY) > 45) && (az < 8000 || az > 24000) )){
    Serial.println("âš ï¸ è·Œå€’åµæ¸¬ä¸­...");
    sendDiscordAlert("ğŸš¨ ESP32 è·Œå€’åµæ¸¬è­¦å‘Šï¼šå§¿æ…‹æˆ–åŠ é€Ÿåº¦ç•°å¸¸ï¼");
    hasWarned = true;
    previousBeepMillis = millis();
    isBeeping = true;
  }

  // ç‹€æ…‹æ¢å¾©æ­£å¸¸
  if (hasWarned && abs(angleX) < 30 && abs(angleY) < 30 && az >= 12000 && az <= 20000) {
    Serial.println("âœ… å§¿æ…‹æ¢å¾©æ­£å¸¸");
    sendDiscordAlert("â˜ ï¸â˜ ï¸è‡ªå·±åš‡è‡ªå·±~~");
    hasWarned = false;
    isBeeping = false;
    digitalWrite(BUZZER_PIN, LOW);
  }

  // è™•ç†èœ‚é³´å™¨ç¯€å¥
  if (hasWarned) {
    unsigned long currentMillis = millis();
    if (isBeeping && currentMillis - previousBeepMillis >= beepOnTime) {
      digitalWrite(BUZZER_PIN, LOW);
      isBeeping = false;
      previousBeepMillis = currentMillis;
    } else if (!isBeeping && currentMillis - previousBeepMillis >= beepOffTime) {
      digitalWrite(BUZZER_PIN, HIGH);
      isBeeping = true;
      previousBeepMillis = currentMillis;
    }
  }

  delay(100);
}
